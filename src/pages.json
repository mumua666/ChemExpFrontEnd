{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/principle/principle",
      "style": {
        "navigationBarTitleText": "原理展示"
      }
    },
    {
      "path": "pages/camera/camera",
      "style": {
        "navigationBarTitleText": "滴定检测"
      }
    },
    {
      "path": "pages/calculate/calculate",
      "style": {
        "navigationBarTitleText": "数据计算"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  // 设置 TabBar
  "tabBar": {
    "color": "#333",
    "selectedColor": "#8c0b42",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "原理展示",
        "pagePath": "pages/principle/principle",
        "iconPath": "static/tabs/Principle.png",
        "selectedIconPath": "static/tabs/PrincipleShow.png"
      },
      {
        "text": "图像检测",
        "pagePath": "pages/camera/camera",
        "iconPath": "static/tabs/Camera.png",
        "selectedIconPath": "static/tabs/CameraShow.png"
      },
      {
        "text": "数据计算",
        "pagePath": "pages/calculate/calculate",
        "iconPath": "static/tabs/Calculate.png",
        "selectedIconPath": "static/tabs/CalculateShow.png"
      }
    ]
  }
}
